@page "/crear-categoria"
@using PropiedadesBlazor.Modelos.DTO
@using PropiedadesBlazor.Repository
@inject ICategoriaRepositorio CategoriaRepositorio
@inject NavigationManager navigationManager
@inject IJSRuntime js

<h1 class="text-center">Crear categoria</h1>



<div class="card">
	<div class="card-header">
		<div class="row">
			<div class="col-7">
				<h2 class="text-dark">
					Nueva Categoria
				</h2>
			</div> 
		</div>
	</div>
	<div class="card-body">
		 <EditForm Model="categoriaDTO" OnValidSubmit="@( () => ManejadorOnCrearCategoria() )">
			 <DataAnnotationsValidator></DataAnnotationsValidator>
			 <ValidationSummary></ValidationSummary>
			 <div class="container">
				 <div class="form-group">
					 <div class="row">
						 <div class="col-2">
							 <label> Nombre: </label>
						 </div>
						 <div class="col-6">
							 <InputText @bind-Value="categoriaDTO.NombreCategoria"
										class="form-control" placeholder="Ingresa el nombre">
							 </InputText>
							 <ValidationMessage For="() => categoriaDTO.NombreCategoria"></ValidationMessage>
						 </div>
					 </div>
				 </div>
				<div class="form-group my-2">
					<div class="row">
						<div class="col-2">
							<label> Descripcion: </label>
						</div>
						<div class="col-6">
							<InputText @bind-Value="categoriaDTO.Descripcion"
									   class="form-control" placeholder="Ingresa descripcion">
							</InputText>
							<ValidationMessage For="() => categoriaDTO.Descripcion"></ValidationMessage>
						</div>
					</div>
				</div>
				<div class="form-group my-4">
					<div class="row">
						<div class="col-2">
							<button type="submit" class="btn btn-success">
								<i class="bi bi-gear-fill mx-1"></i> Guardar
							</button>
						</div>
						<div class="col-6">
							<NavLink href="categorias" class="btn btn-secondary">
								<i class="bi bi-arrow-left-circle-fill mx-1"> </i> Cancelar
							</NavLink>
						</div>
					</div>
				</div>
			 </div>
		 </EditForm>
	</div>
</div>


@code {
	private CategoriaDTO categoriaDTO { get; set; } = new CategoriaDTO();
	private async Task ManejadorOnCrearCategoria()
	{
		var nombreCategoria = await CategoriaRepositorio.NombreCategoriaExiste(categoriaDTO.NombreCategoria);
		if (nombreCategoria != null)
		{
			await js.ToastrError("El nombre de la categoria ya existe");
			return;	
		}
		// si entra aqui, no existe, y hay que crearlo.
		var crearCategoria = await CategoriaRepositorio.CrearCategoria(categoriaDTO);
		await js.ToastrSuccess("Categoria guardad exitosamente");
		navigationManager.NavigateTo("categorias");
	}
}
